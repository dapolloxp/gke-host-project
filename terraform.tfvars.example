# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

host_project_id    = "your-host-project-id"
service_project_id = "your-service-project-id"
region             = "us-central1"
zone               = "us-central1-a"

network_name = "shared-vpc"

subnet_ranges = {
  primary             = "10.0.0.0/24"
  pods_secondary      = "10.1.0.0/16"
  services_secondary  = "10.2.0.0/16"
}

cluster_name       = "main-cluster"
initial_node_count = 3
node_machine_type  = "e2-medium"
node_disk_size_gb  = 20